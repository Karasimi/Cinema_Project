<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageButton
        android:id="@+id/imagebtnShow"
        android:layout_width="143dp"
        android:layout_height="120dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/screen_background_light_transparent" />

    <TextView
        android:id="@+id/txtMember"
        android:layout_width="202dp"
        android:layout_height="25dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btnInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebtnShow"
        app:layout_constraintVertical_bias="0.148" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="382dp"
        android:layout_height="47dp"
        android:layout_marginTop="100dp"
        android:text="Thông tin tài khoản"
        android:onClick="Info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebtnShow" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="380dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:text="Lịch sử giao dịch"
        android:onClick="Deal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>