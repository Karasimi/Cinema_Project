<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layoutthongtin"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity_chitiet.tabthongtin">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/c"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                </ImageView>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvtenphim"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="21sp"
                    android:autoSizeMinTextSize="1sp"
                    android:layout_width="300dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.483"
                    app:layout_constraintStart_toEndOf="@+id/img"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center_horizontal" />

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tevview"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Thể Loại:"
                    app:layout_constraintBottom_toBottomOf="@+id/tvtheloai"
                    app:layout_constraintEnd_toEndOf="@+id/tevview1"
                    app:layout_constraintTop_toTopOf="@+id/tvtheloai" />

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/tevview1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Độ Tuổi:"
                    app:layout_constraintBottom_toBottomOf="@+id/tvdotuoi"
                    app:layout_constraintStart_toEndOf="@+id/img"
                    app:layout_constraintTop_toTopOf="@+id/tvdotuoi"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="18sp"
                    android:autoSizeMinTextSize="1sp"
                    android:id="@+id/tvtheloai"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/tvdotuoi"
                    app:layout_constraintTop_toBottomOf="@+id/tvtenphim" />

                <TextView
                    android:id="@+id/tvdotuoi"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="21sp"
                    android:autoSizeMinTextSize="1sp"
                    app:layout_constraintStart_toEndOf="@+id/tevview1"
                    app:layout_constraintTop_toBottomOf="@+id/tvtheloai"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Điểm:"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvdiem"
                    app:layout_constraintStart_toStartOf="@+id/tevview1"
                    app:layout_constraintTop_toTopOf="@+id/tvdiem" />

                <TextView
                    android:id="@+id/tvdiem"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autoSizeMaxTextSize="21sp"
                    android:autoSizeMinTextSize="1sp"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintStart_toStartOf="@+id/tvdotuoi"
                    app:layout_constraintTop_toBottomOf="@+id/tvdotuoi" />

                <Button
                    android:id="@+id/btnchamdiem"
                    android:background="@color/backround"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chấm Điểm"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img"
                    app:layout_constraintTop_toBottomOf="@+id/tvdiem" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/textView9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Đạo Diễn:"
                    app:layout_constraintBottom_toBottomOf="@+id/tvdaodien"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvdaodien"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:textSize="18sp"
                    android:id="@+id/textView10"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Diễn Viên:"
                    app:layout_constraintBottom_toBottomOf="@+id/tvdienvien"
                    app:layout_constraintEnd_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="@+id/tvdienvien" />

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="21sp"
                    android:autoSizeMinTextSize="1sp"
                    android:id="@+id/tvdaodien"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="21sp"
                    android:autoSizeMinTextSize="1sp"
                    android:id="@+id/tvdienvien"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="@+id/tvdaodien"
                    app:layout_constraintTop_toBottomOf="@+id/tvdaodien" />

                <TextView
                    android:id="@+id/tvmota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="21sp"
                    android:autoSizeMinTextSize="1sp"
                    android:padding="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvdienvien"
                    tools:layout_editor_absoluteX="71dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtube_player_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>